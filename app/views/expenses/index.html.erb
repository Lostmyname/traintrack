<section class="content-header">
  <h1>Expense requests</h1>
</section>

<div class="content">
  <div class="box">
    <div class="box-header">
      <h2 class="box-title">All pending requests</h2>
    </div>

    <div class="box-body">
      <%= render partial: 'expenses/list', locals: { expenses: @expenses_pending, view_person: true } %>
    </div>
  </div>

  <div class="box">
    <div class="box-header">
      <h2 class="box-title">All approved requests</h2>
    </div>

    <div class="box-body">
      <%= render partial: 'expenses/list', locals: { expenses: @expenses_approved, view_person: true } %>
    </div>
  </div>
</div>