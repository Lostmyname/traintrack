<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Event Name</th>
    <th>Date</th>
    <th>Cost</th>
    <% if defined? view_person and view_person %>
      <th>Person</th>
    <% end %>
    <th>Status</th>
  </tr>
  </thead>

  <tbody>
  <% if expenses.empty? %>
    <tr>
      <td colspan="5">No requests here!</td>
    </tr>
  <% end %>

  <% expenses.each do |expense| %>
    <tr>
      <td>
        <% if current_person_admin? %>
          <%= link_to expense.name, expense %>
        <% else %>
          <%= expense.name %>
        <% end %></td>
      <td><%= expense.pretty_date %></td>
      <td><%= format_currency expense.cost %></td>
      <% if defined? view_person and view_person %>
        <td><%= link_to expense.person.name, expense.person %></td>
      <% end %>
      <td><%= expense.status %></td>
    </tr>
  <% end %>
  </tbody>
</table>